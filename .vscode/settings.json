{
  "latex-workshop.latex.outDir": "%DIR%/build",
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": [
        "pdflatex",
        "nomencl",
        "biber",
        "pdflatex"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
          "--shell-escape", // if you want to have the shell-escape flag
          "-synctex=1",
          "-interaction=nonstopmode",
          "-output-directory=%OUTDIR%",
          "-file-line-error",
          "%DOC%"
      ]
    },
    {
      "name": "nomencl",
      "command": "makeindex",
      "args": [
          "build/%DOCFILE%.nlo",
          "-s",
          "nomencl.ist",
          "-o",
          "build/%DOCFILE%.nls"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
          "-output-directory=%OUTDIR%",
          "%DOCFILE%"
      ]
    }
  ],
  "vsicons.associations.folders": [
    {
      "icon": "include",
      "extensions": ["snippets"],
      "format": "FileFormat.svg",
      "disabled": false
    },
    {
      "icon": "library",
      "extensions": ["bib"],
      "format": "FileFormat.svg",
      "disabled": false
    },
  ]
}
